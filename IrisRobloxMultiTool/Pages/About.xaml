                                </Canvas>
                            </Viewbox>
                            <Label Content="DISCORD"
                                   FontFamily="Consolas"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>

                    <Label Grid.Row="1"
                           Name="OnlineCount"
                           Content="0 ONLINE"
                           FontFamily="Consolas"
                           Margin="0,4,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== Update Banner ===== -->

        <!-- ===== Release Notes ===== -->
        <Grid Grid.Row="2">
            <Border CornerRadius="15"
                    Background="White"
                    Opacity="0.025"/>

            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label Content="Latest Release Notes"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

                <RichTextBox Grid.Row="1"
                             x:Name="RootTextBox"
                             IsReadOnly="True"
                             Background="Transparent"
                             BorderBrush="White"
                             BorderThickness="0.5"
                             VerticalScrollBarVisibility="Auto">
                    <FlowDocument Name="LogBox"
                                  FontFamily="Consolas"
                                  FontSize="12"
                                  TextAlignment="Center"/>
                </RichTextBox>
            </Grid>
        </Grid>
    </Grid>
</Page>
