<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    x:Class="IrisRobloxMultiTool.Pages.About"
    mc:Ignorable="d"
    d:DesignHeight="380"
    d:DesignWidth="668"
    Title="About"
    Loaded="Page_Loaded">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <!-- ===== Top Stats ===== -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Name="UpdateAvailableCanvas" Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Background="#FF065FEF"
                    CornerRadius="0,0,15,15"
                    Padding="10,4"
                    Margin="0,0,0,-28"
                    >
                <Border.Effect>
                    <DropShadowEffect
                        Color="Black"
                        BlurRadius="10"
                        ShadowDepth="3"
                        Opacity="0.4" />
                </Border.Effect>

                <Label Name="UpdateVersionLabel"
                       Content="Update Available: v10.0.0"
                       FontFamily="Yu Gothic UI Semibold"
                       FontWeight="Bold"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Foreground="White"/>
            </Border>

            <!-- VERSION -->
            <Border Grid.Column="0" Background="#FF007EC6" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FF323232" SizeChanged="Border_SizeChanged">
                        <Label Content="VERSION"
                               FontFamily="Consolas"
                               FontSize="18"
                               
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>

                        <Border.Effect>
                            <DropShadowEffect
                                Color="Black"
                                BlurRadius="10"
                                ShadowDepth="3"
                                Opacity="0.4" />
                        </Border.Effect>
                    </Border>

                    <Label Grid.Row="1"
                           Margin="0,5,0,0"
                           Name="ReleaseVersion"
                           Content="0"
                           FontFamily="Consolas"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>
                </Grid>
            </Border>

            <!-- DOWNLOADS -->
            <Border Grid.Column="1" Margin="8,0" Background="#FF44CC11" CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FF323232" >
                        <Label Content="DOWNLOADS"
                               FontFamily="Consolas"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"/>
                    </Border>

                    <Label Grid.Row="1"
                           Name="DownloadCount"
                           Margin="0,4,0,0"
                           Content="0"
                           FontFamily="Consolas"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"/>
                </Grid>
            </Border>

            <!-- DISCORD -->
            <Border Grid.Column="2"
                    Background="#5865F2"
                    CornerRadius="10"
                    Cursor="Hand"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                    MouseLeave="Canvas_MouseLeave">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#FF323232"
                            >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Viewbox Width="20" Height="20" Margin="0,0,6,0">
                                <Canvas Width="256" Height="256">
